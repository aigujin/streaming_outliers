<assembly>
  <id>archive</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/flux</directory>
      <outputDirectory>${project.parent.artifactId}-${project.version}/topologies</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/*.formatted</exclude>
        <exclude>**/*.filtered</exclude>
      </excludes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/bash</directory>
      <outputDirectory>${project.parent.artifactId}-${project.version}/bin</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/*.formatted</exclude>
        <exclude>**/*.filtered</exclude>
      </excludes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/data</directory>
      <outputDirectory>${project.parent.artifactId}-${project.version}/data</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/*.formatted</exclude>
        <exclude>**/*.filtered</exclude>
      </excludes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>

    <fileSet>
      <directory>${project.basedir}/target</directory>
      <outputDirectory>${project.parent.artifactId}-${project.version}/lib</outputDirectory>
      <includes>
        <include>${project.artifactId}-${project.version}.jar</include>
      </includes>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
</assembly>
